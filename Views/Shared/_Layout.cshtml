        <div class="container">
            &copy; 2021 - ProjectManagementApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>-->
    <!-- MDB -->
    <script type="text/javascript" src="~/lib/MDB5/js/mdb.min.js"></script>
    <!-- Custom scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- flatpickr -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr(".datePicker", {});
    </script>

    <!-- the fileinput plugin -->
    <script type="text/javascript" src="~/lib/kartik-v-bootstrap-fileinput/js/plugins/buffer.min.js"></script>
    <script type="text/javascript" src="~/lib/kartik-v-bootstrap-fileinput/js/plugins/filetype.min.js"></script>
    <script type="text/javascript" src="~/lib/kartik-v-bootstrap-fileinput/js/plugins/piexif.min.js"></script>
    <script type="text/javascript" src="~/lib/kartik-v-bootstrap-fileinput/js/plugins/sortable.min.js"></script>
    <script type="text/javascript" src="~/lib/kartik-v-bootstrap-fileinput/js/fileinput.min.js"></script>
    <script type="text/javascript" src="~/lib/kartik-v-bootstrap-fileinput/themes/fa4/theme.js"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
