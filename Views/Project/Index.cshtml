<link rel="stylesheet" href="~/css/projectlist-style.css" />
<script src="~/js/projectlist-script.js"></script>
<script type="text/javascript" src="~/js/story.js"></script>
<meta charset="utf-8" />

<span id="projectHeader">Projekte</span>
<button id="filterBtn">Filter</button>

<div class="projectActions">
    <form asp-action="CreateEdit">
        <button type="submit" class="btnActions">Hinzufügen</button> <br />
    </form>
</div>

<div class="listContainer">

    @{
        List<Project> activeProjects = new List<Project>();
        List<Project> pastProjects = new List<Project>();
        List<Project> futureProjects = new List<Project>();

        foreach (Project project in ViewBag.Projects)
        {
            if (project.tense.Equals("active"))
            {
                activeProjects.Add(project);
            }
            else if (project.tense.Equals("future"))
            {
                futureProjects.Add(project);
            }
            else
            {
                pastProjects.Add(project);
            }
        }
    }


    <i class="bi bi-trash-fill"></i>
    <i class="bi bi-pencil-fill"></i>

    <button class="collapsible">Aktuelle Projekte</button>
    <div class="content">
        <div class="list-group">
            <ul>
                @{
                    foreach (Project project1 in activeProjects)
                    {
                                <li class="bermia">
                                    <a class="projectlist" asp-action="Index" asp-route-projectid="@project1.id" asp-route-projectName="@project1.projectName" asp-controller="UserStory">@project1.projectName</a>
                                    <form asp-action="CreateEdit" asp-route-id="@project1.id">
                                        <button onclick="" type="submit" class="projectEditButton">
