@using Microsoft.AspNetCore.Identity
@model ProjectManagementApplication.Models.Project
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="container mx-auto mt-5">


    <h4 class="my-3">
        Schritt 1 von 4
    </h4>

    <div class="progress my-3">
        <div class="progress-bar" role="progressbar" style="width: 75%; background-color:#3f27ba" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
    </div>


    <div class="my-5">
        <h4>Projekt Name:</h4>
        <div class="form-outline my-2 w-25">
            <input type="text" id="formControlLg" class="form-control form-control-lg" asp-for="projectName" size="30" />
        </div>
    </div>


</div>

<div class="d-flex justify-content-center mt-4 mx-auto">
    <button type="button"
            onclick="window.location.href = '../'"
            class="btn btn-lg h-100 mx-5 align-self-end"
            data-mdb-ripple-color="dark"
            style="background-color: #EFEDED">
        ABBRECHEN
    </button>

    <button type="submit"
            class="btn btn-lg h-100 mx-5 align-self-end"
            data-mdb-ripple-color="dark"
            style="background-color: #EFE407">
        weiter
    </button>
</div>
