@using Microsoft.AspNetCore.Identity
@model ProjectManagementApplication.Models.Project
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<script type="text/javascript" src="~/js/createProject.js"></script>


<form asp-action="CreateDescripiton" method="post" asp-route-projectId="@ViewBag.projectIdNew">
    <div class="container mx-auto mt-5">


        <h4 class="my-3">
            Step 3 of 4
        </h4>

        <div class="progress my-3">
            <div class="progress-bar" role="progressbar" style="width: 75%; background-color:#3f27ba" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        <h4 class="my-auto me-3 mt-3">Details:</h4>
        <div class="d-flex justify-content-between my-3  mx-auto">
            <div class="form-outline flex-fill">
                <textarea class="form-control form-control-lg" asp-for="description" id="textAreaExample" rows="5"></textarea>
                <label class="form-label" for="textAreaExample">Description</label>
            </div>
        </div>


    </div>

    <div class="d-flex justify-content-center mt-4 mx-auto">
        <button type="button"
                onclick="cancelCreate(@ViewBag.projectIdNew)"
                class="btn btn-lg h-100 mx-5 align-self-end"
                data-mdb-ripple-color="dark"
                style="background-color: #EFEDED">
            CANCEL
        </button>


        <button type="submit"
                class="btn btn-lg h-100 mx-5 align-self-end"
                data-mdb-ripple-color="dark"
                style="background-color: #EFE407">
            CONTINUE
        </button>

    </div>
</form>

