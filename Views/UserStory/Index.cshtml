<style>
    body {
        background: white;
    }

    .form-sdsdsdsd {
        border: 0px;
        border-style: none;
    }

    .userstoryItem:hover {
        cursor: pointer;
    }

    .sendtoback {
        z-index: -auto;
    }

    .employee {
        background-color: #EFE407;
    }

        .employee i {
            opacity: 0%;
            transition: opacity .5s;
        }

            .employee i:hover {
                opacity: 100%
            }



    .admin {
        background-color: firebrick;
    }

        .admin i {
            opacity: 0%;
            transition: opacity .5s;
        }

            .admin i:hover {
                opacity: 100%
            }

