     tabindex="-1"
     aria-labelledby="infoModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header p-0" style="border-bottom: 1px solid #dcdfe4;">
