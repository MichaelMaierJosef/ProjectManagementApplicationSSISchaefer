@page
@model LoginModel
<!--

<link rel="stylesheet" href="~/css/Login.css" />-->

<link rel="stylesheet" href="~/css/loginRegister.css" />

<style>


</style>

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mt-2 d-flex align-items-center justify-content-center">
                            <img src="~/pictures/SSI_Schäfer_Logo.png" alt="SSI Schäfer" width="80%" class="logoLogin" />
                        </div>
                        <h3 class="text-center mt-4">Login</h3>
                        <div class="mt-4 d-flex align-items-center justify-content-center">
                            <form id="account" method="post">

                                <div class="form-outline mt-3 mb-1">
                                    <i class="fas fa-user-alt trailing"></i>
                                    <input asp-for="Input.Email" type="text" id="formUser" class="form-control form-control-lg form-icon-trailing" size="25" />
                                    <label class="form-label" asp-for="Input.Email"></label>
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>


                                <div class="form-outline mt-3 mb-1">
                                    <i class="fas fa-key trailing"></i>
                                    <input asp-for="Input.Password" type="password" id="formPassword" class="form-control form-control-lg form-icon-trailing" />
                                    <label class="form-label" asp-for="Input.Password"></label>
                                </div>

                                <span asp-validation-for="Input.Password" class="text-danger"></span>

                                <div class="mt-5 d-grid gap-2 col-10 mx-auto">
                                    <button type="submit" class="btn btn-primary btn-lg btn-rounded">Login</button>
                                </div>
                                <!--
                                <div style="text-align:center">
                                    <a class="mt-2" href="Register">Register?</a>
                                </div>
                                -->
                                <!-- Register buttons -->
                                <div class="text-center mt-5">
                                    <p>Noch nicht registriert? <a href="Register">Registrieren</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

